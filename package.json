{
  "name": "mopho-v",
  "productName": "MoPho-V",
  "version": "0.1.4-super-alpha",
  "description": "Community Supported Movie and Photo Viewer",
  "build": {
    "appId": "com.greggman.moPhoV",
    "asar": true,
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "files": [
      "package.json",
      "main.js",
      "**/node_modules/**/*",
      "out/**/*",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "Resources",
        "to": "."
      }
    ]
  },
  "main": "main.js",
  "scripts": {
    "build": "babel --out-dir out --source-maps inline src",
    "watch": "babel --watch --out-dir out --source-maps inline src",
    "start": "cross-env NODE_ENV=development electron main.js",
    "startp": "cross-env NODE_ENV=production electron main.js",
    "unit-tests": "mocha --require source-map-support/register --recursive out/**/*.test.js",
    "integration-tests": "mocha --require source-map-support/register --recursive test/integration/**/*.test.js",
    "lint": "eslint src/**",
    "test": "lint && npm run build && npm run unit-tests && npm run integration-tests",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greggman/MoPho-V.git"
  },
  "keywords": [
    "MoPho-V",
    "image",
    "images",
    "video",
    "videos"
  ],
  "babel": {
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "Chrome >= 58"
            ]
          }
        }
      ],
      "stage-1",
      "react"
    ]
  },
  "author": "greggman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greggman/MoPho-V/issues"
  },
  "homepage": "https://github.com/greggman/MoPho-V#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron": "^1.8.2",
    "electron-builder": "^19.6.3",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-optional-comma-spacing": "0.0.4",
    "eslint-plugin-react": "^7.6.1",
    "express": "^4.14.0",
    "mocha": "^5.0.0",
    "node-cleanup": "^2.1.2",
    "sinon": "^4.2.0",
    "source-map-support": "^0.5.3",
    "spectron": "^3.8.0",
    "temp": "^0.8.3"
  },
  "dependencies": {
    "asar": "^0.14.2",
    "chalk": "^2.3.0",
    "chokidar": "^2.0.2",
    "electron-updater": "^2.20.1",
    "es6-promisify": "^5.0.0",
    "exifreader": "^2.2.0",
    "graceful-fs": "^4.1.11",
    "hjson": "^3.1.1",
    "immutability-helper": "^2.6.4",
    "jszip": "^3.1.5",
    "keycode": "^2.1.9",
    "lodash": "^4.17.5",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^2.1.11",
    "mobx": "^3.2.2",
    "mobx-react": "^4.3.5",
    "moment": "^2.20.1",
    "optionator": "^0.8.1",
    "other-window-ipc": "^1.3.1",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-list": "^0.8.0",
    "react-measure": "^2.0.2",
    "react-reflex": "^2.1.0",
    "react-virtualized": "^9.18.5",
    "rimraf": "^2.6.2"
  }
}
