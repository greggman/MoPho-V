{
  "name": "mopho-v",
  "productName": "MoPho-V",
  "version": "0.1.9-super-alpha",
  "description": "Community Supported Movie and Photo Viewer",
  "build": {
    "appId": "com.greggman.moPhoV",
    "asar": true,
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "files": [
      "package.json",
      "main.js",
      "**/node_modules/**/*",
      "out/**/*",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "Resources",
        "to": "."
      }
    ]
  },
  "main": "main.js",
  "scripts": {
    "build-app": "babel --out-dir out --source-maps inline src",
    "watch-app": "babel --watch --out-dir out --source-maps inline --ignore \"src/js/pages/web/*.js\" src",
    "build-web": "webpack --mode production",
    "watch-web": "webpack --mode development --watch",
    "watch": "concurrently \"npm run watch-app\" \"npm run watch-web\"",
    "build": "npm run build-app && npm run build-web",
    "start": "cross-env NODE_ENV=development electron main.js",
    "startp": "cross-env NODE_ENV=production electron main.js",
    "unit-tests": "mocha --require source-map-support/register --recursive out/**/*.test.js",
    "integration-tests": "mocha --require source-map-support/register --recursive test/integration/**/*.test.js",
    "lint": "eslint \"src/**\"",
    "test": "npm run lint && npm run build && npm run unit-tests && npm run integration-tests",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greggman/MoPho-V.git"
  },
  "keywords": [
    "MoPho-V",
    "image",
    "images",
    "video",
    "videos"
  ],
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "electron": "4"
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "author": "greggman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greggman/MoPho-V/issues"
  },
  "homepage": "https://github.com/greggman/MoPho-V#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "ajv": "^6.12.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.0",
    "electron-builder": "^22.8.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-optional-comma-spacing": "0.0.4",
    "eslint-plugin-react": "^7.20.6",
    "mocha": "^8.1.3",
    "node-cleanup": "^2.1.2",
    "sinon": "^9.0.3",
    "source-map-support": "^0.5.19",
    "spectron": "^11.1.0",
    "temp": "^0.9.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "asar": "^3.0.3",
    "chokidar": "^3.4.2",
    "debug": "^4.1.1",
    "electron-updater": "^4.3.4",
    "es6-promisify": "^6.1.1",
    "exifreader": "^3.12.2",
    "express": "^4.17.1",
    "graceful-fs": "^4.2.4",
    "happyfuntimes": "^0.2.5",
    "hjson": "^3.2.1",
    "immutability-helper": "^3.1.1",
    "keycode": "^2.2.0",
    "lodash": "^4.17.20",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^2.1.27",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "moment": "^2.27.0",
    "optionator": "^0.9.1",
    "other-window-ipc": "^1.3.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-contextmenu": "^2.14.0",
    "react-dom": "^16.13.1",
    "react-list": "^0.8.15",
    "react-measure": "^2.3.0",
    "react-reflex": "^3.1.0",
    "react-virtualized": "^9.22.2",
    "rimraf": "^3.0.2",
    "unzipit": "^1.3.1"
  }
}
