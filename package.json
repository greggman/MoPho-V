{
  "name": "mopho-v",
  "productName": "MoPho-V",
  "version": "0.1.5-super-alpha",
  "description": "Community Supported Movie and Photo Viewer",
  "build": {
    "appId": "com.greggman.moPhoV",
    "asar": true,
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "files": [
      "package.json",
      "main.js",
      "**/node_modules/**/*",
      "out/**/*",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "Resources",
        "to": "."
      }
    ]
  },
  "main": "main.js",
  "scripts": {
    "build-app": "babel --out-dir out --source-maps inline src",
    "watch-app": "babel --watch --out-dir out --source-maps inline --ignore \"src/js/pages/web/*.js\" src",
    "build-web": "webpack --mode production",
    "watch-web": "webpack --mode development --watch",
    "watch": "concurrently \"npm run watch-app\" \"npm run watch-web\"",
    "build": "npm run build-app && npm run build-web",
    "start": "cross-env NODE_ENV=development electron main.js",
    "startp": "cross-env NODE_ENV=production electron main.js",
    "unit-tests": "mocha --require source-map-support/register --recursive out/**/*.test.js",
    "integration-tests": "mocha --require source-map-support/register --recursive test/integration/**/*.test.js",
    "lint": "eslint \"src/**\"",
    "test": "npm run lint && npm run build && npm run unit-tests && npm run integration-tests",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greggman/MoPho-V.git"
  },
  "keywords": [
    "MoPho-V",
    "image",
    "images",
    "video",
    "videos"
  ],
  "babel": {
    "plugins": [
      ["@babel/plugin-proposal-decorators", { "legacy": true }],
      ["@babel/plugin-proposal-class-properties", { "loose": true }]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "electron": "4"
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "author": "greggman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greggman/MoPho-V/issues"
  },
  "homepage": "https://github.com/greggman/MoPho-V#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "ajv": "^6.7.0",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-optional-comma-spacing": "0.0.4",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0",
    "node-cleanup": "^2.1.2",
    "sinon": "^7.2.3",
    "source-map-support": "^0.5.10",
    "spectron": "^5.0.0",
    "temp": "^0.9.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "asar": "^0.14.6",
    "chalk": "^2.4.2",
    "chokidar": "^2.0.4",
    "debug": "^4.1.1",
    "electron-updater": "^4.0.6",
    "es6-promisify": "^6.0.1",
    "exifreader": "^2.6.0",
    "express": "^4.16.4",
    "graceful-fs": "^4.1.15",
    "happyfuntimes": "^0.2.5",
    "hjson": "^3.1.2",
    "immutability-helper": "^3.0.0",
    "jszip": "^3.1.5",
    "keycode": "^2.2.0",
    "lodash": "^4.17.11",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^2.1.21",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "moment": "^2.24.0",
    "optionator": "^0.8.1",
    "other-window-ipc": "^1.3.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-list": "^0.8.11",
    "react-measure": "^2.2.2",
    "react-reflex": "^3.0.8",
    "react-virtualized": "^9.21.0",
    "rimraf": "^2.6.3"
  }
}
